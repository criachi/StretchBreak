{
    "name": "StrechBreak",
    "version": "1.0",
    "description": "Customizable reminder to stretch while you work",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "declarativeContent",
        "storage",
        "alarms"
    ]
}